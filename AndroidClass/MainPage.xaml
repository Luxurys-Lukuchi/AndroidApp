<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidClass.MainPage">

    <!-- Градиентный фон -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF667EEA" Offset="0.1"/>
            <GradientStop Color="#FF64B6AC" Offset="0.5"/>
            <GradientStop Color="#FF67B9E6" Offset="0.9"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- Контент страницы -->
    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <!-- Надпись "Сапер" -->
        <Label Text="Сапер" FontSize="24" HorizontalOptions="Center" AbsoluteLayout.LayoutBounds="0.5, 0.1, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <!-- Символ, представляющий кубок -->
        <Label Text="🏆" FontSize="72" HorizontalOptions="Center" AbsoluteLayout.LayoutBounds="0.5, 0.3, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <!-- Кнопка "Начать" -->
        <Button Text="Начать" Clicked="OnStartButtonClicked" HorizontalOptions="FillAndExpand" AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.8, 0.1" AbsoluteLayout.LayoutFlags="All" />

        <!-- Кнопка "Выйти" -->
        <Button Text="Выйти" Clicked="OnExitButtonClicked" HorizontalOptions="FillAndExpand" AbsoluteLayout.LayoutBounds="0.5, 0.6, 0.8, 0.1" AbsoluteLayout.LayoutFlags="All" />
        <!-- Бомбы -->
        <Label Text="💣" FontSize="36" AbsoluteLayout.LayoutBounds="90, 50, -1, -1" AbsoluteLayout.LayoutFlags="None" />
    </AbsoluteLayout>

</ContentPage>

