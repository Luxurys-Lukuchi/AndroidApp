<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidClass.GamePage">

    <!-- Градиентный фон -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF667EEA" Offset="0.1"/>
            <GradientStop Color="#FF64B6AC" Offset="0.5"/>
            <GradientStop Color="#FF67B9E6" Offset="0.9"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <Label x:Name="statusLabel" Text="Tap to start" TextColor="Black" FontSize="16" VerticalOptions="Start" HorizontalOptions="Center" Margin="10"/>

        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

            <Grid x:Name="gameGrid" BackgroundColor="Gray" Margin="10">

            </Grid>
        </StackLayout>
    </Grid>

</ContentPage>

